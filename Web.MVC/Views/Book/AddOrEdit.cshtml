@model Application.ViewModels.BookViewModel
@{
    if (Model == null)
    {
        ViewBag.Title = "Add Book";
    }
    else
    {
        ViewBag.Title = "Edit Book";
    }

}
<h2>@ViewBag.Title</h2>
    <form asp-controller="Book" asp-action="AddOrEdit" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <div class="form-group row">
            <div class="col-md-3">
                <label asp-for="Name" class="col-form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Name">
            </div>
           
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <label asp-for="ISBN" class="col-form-label"></label>
                <input asp-for="ISBN" class="form-control" placeholder="ISBN">
            </div>
            
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <label asp-for="AuthorName" class="col-form-label"></label>
                <input asp-for="AuthorName" class="form-control" placeholder="Author Name">
            </div>
           
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <label asp-for="InStock" class="col-form-label"></label>
                <input asp-for="InStock" class="form-control" placeholder="In Stock">
            </div>
            
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
</form>
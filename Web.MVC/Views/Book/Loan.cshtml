@model Application.ViewModels.BookViewModel
@{

    ViewBag.Title = "Loan Book";

    var bookName = $"{Model.Name} - {Model.AuthorName}";
}
<h2>@ViewBag.Title</h2>
<h3>@bookName</h3>
<form asp-controller="Book" asp-action="Loan" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <div class="form-group row">
        <div class="col-md-3">
            <label class="col-form-label">Select reader</label>
            <select name="readerId" class="form-control" id="readersList">
            </select>
        </div>
    </div>

    <div class="form-group row">

        <div class="col-md-3">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>



@section Scripts
{
    <script src="~/js/readers-select2.js"></script>
}
